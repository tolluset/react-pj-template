{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "strict": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6","dom"],
    "outDir": "./dist",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJs"
    }
  },
  "include": ["src/**/*", "tests/**/*"],
}
